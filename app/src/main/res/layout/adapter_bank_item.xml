<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="@color/red"
    android:layout_margin="@dimen/activity_horizontal_margin">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_selected"
            android:src="@mipmap/selecte_white"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_selected"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:ellipsize="end"
            android:maxLength="10"
            android:singleLine="true"
            android:text="姓名"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal_up"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_acount_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/image_padding"
            android:layout_alignParentRight="true"
            android:text="支付宝"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal" />


        <TextView
            android:id="@+id/tv_acount_num"
            android:layout_below="@+id/tv_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_toRightOf="@+id/iv_selected"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/image_padding"
            android:layout_marginBottom="@dimen/image_padding"
            android:text="1306****0836"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal" />


    </RelativeLayout>


</android.support.v7.widget.CardView>