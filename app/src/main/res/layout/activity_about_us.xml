<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/gray_bg"
    android:layout_height="match_parent"
    tools:context=".activity.AboutUsActivity">






    <TextView
        android:id="@+id/tv_icon"
        android:text="@string/app_name"
        android:textColor="@color/color_tittle"
        android:textSize="@dimen/text_size_normal_up"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:drawableTop="@mipmap/logo_middle"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:drawablePadding="@dimen/image_padding_big"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/tv_society_deal"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_icon"
        android:text="社会公约"
        android:background="@color/white"
        android:textSize="@dimen/text_size_normal"
        android:textColor="@color/color_tittle"
        android:padding="@dimen/activity_horizontal_margin"
        android:drawableRight="@mipmap/arrow_right_black"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_private_statament"
        android:layout_width="0dp"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_society_deal"
        android:text="隐私申明"
        android:textSize="@dimen/text_size_normal"
        android:textColor="@color/color_tittle"
        android:padding="@dimen/activity_horizontal_margin"
        android:drawableRight="@mipmap/arrow_right_black"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/tv_link_custome"
        android:layout_width="0dp"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_private_statament"
        android:text="联系客服"
        android:textSize="@dimen/text_size_normal"
        android:textColor="@color/color_tittle"
        android:padding="@dimen/activity_horizontal_margin"
        android:drawableRight="@mipmap/arrow_right_black"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/tv_service_deal"
        android:layout_width="0dp"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_link_custome"
        android:text="服务条款"
        android:textSize="@dimen/text_size_normal"
        android:textColor="@color/color_tittle"
        android:padding="@dimen/activity_horizontal_margin"
        android:drawableRight="@mipmap/arrow_right_black"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/tv_about_us"
        android:layout_width="0dp"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_service_deal"
        android:text="关于我们"
        android:textSize="@dimen/text_size_normal"
        android:textColor="@color/color_tittle"
        android:padding="@dimen/activity_horizontal_margin"
        android:drawableRight="@mipmap/arrow_right_black"
        android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>