<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/list_divider_color"
    android:orientation="vertical"
    tools:context=".activity.ApplyWithdrawActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账户余额"
            android:textColor="@color/color_tittle"
            android:textSize="@dimen/text_size_normal" />


        <TextView
            android:id="@+id/tv_money_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="right"
            android:padding="@dimen/image_padding"
            android:text="0.0元"
            android:textColor="@color/color_date"
            android:textSize="@dimen/text_size_normal" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现金额"
            android:textColor="@color/color_tittle"
            android:textSize="@dimen/text_size_normal" />


        <EditText
            android:id="@+id/et_for_withdraw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="right"
            android:textCursorDrawable="@drawable/edit_cursor_drawable"
            android:hint="请输入提现金额"
            android:inputType="number"
            android:padding="@dimen/image_padding"
            android:textColor="@color/color_date"
            android:textSize="@dimen/text_size_normal" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现账户"
            android:textColor="@color/color_tittle"
            android:textSize="@dimen/text_size_normal" />


        <TextView
            android:id="@+id/tv_acount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="@dimen/image_padding"
            android:drawableRight="@mipmap/arrow_right_black"
            android:gravity="right"
            android:hint="请选择提现账户"
            android:padding="@dimen/image_padding"
            android:textColor="@color/color_date"
            android:textSize="@dimen/text_size_normal" />


    </LinearLayout>


    <Button
        android:id="@+id/btn_withdraw"
        android:layout_width="match_parent"
        android:text="立即提现"
        android:textSize="@dimen/text_size_normal"
        android:textColor="@color/white"
        android:background="@drawable/normal_submit_btn_gray"
        android:gravity="center"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/nav_bar_height"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/nav_bar_height"
        android:layout_height="wrap_content" />



    <TextView
        android:textColor="@color/color_info"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:text="@string/withdraw_tips"
        android:lineSpacingMultiplier="1.3"
        android:layout_height="wrap_content" />

</LinearLayout>