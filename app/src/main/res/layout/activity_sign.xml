<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.SignActivity">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@mipmap/icon_sign_top" />

            <TextView
                android:id="@+id/tv_rule"
                android:text="活动规则"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:textSize="@dimen/text_size_normal_down"
                android:padding="@dimen/image_padding"
                android:background="@drawable/normal_submit_btn_gold_light"
                android:layout_gravity="right"
                android:textColor="#F3A432"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </FrameLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="10dp"
            android:background="@color/white"
            android:layout_marginTop="-15dp"
            android:layout_height="20dp"></android.support.v7.widget.CardView>

        <LinearLayout
            android:id="@+id/ll_week"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#CBDAE6"
                android:gravity="center"
                android:paddingTop="@dimen/padding_larger"
                android:paddingBottom="@dimen/padding_larger"
                android:text="周一"
                android:textColor="@color/color_info"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="#CBDAE6"
                android:gravity="center"
                android:paddingTop="@dimen/padding_larger"
                android:paddingBottom="@dimen/padding_larger"
                android:text="周二"
                android:textColor="@color/color_info"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#CBDAE6"
                android:gravity="center"
                android:paddingTop="@dimen/padding_larger"
                android:paddingBottom="@dimen/padding_larger"
                android:text="周三"
                android:textColor="@color/color_info"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="#CBDAE6"
                android:gravity="center"
                android:paddingTop="@dimen/padding_larger"
                android:paddingBottom="@dimen/padding_larger"
                android:text="周四"
                android:textColor="@color/color_info"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#CBDAE6"
                android:gravity="center"
                android:paddingTop="@dimen/padding_larger"
                android:paddingBottom="@dimen/padding_larger"
                android:text="周五"
                android:textColor="@color/color_info"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="#CBDAE6"
                android:gravity="center"
                android:paddingTop="@dimen/padding_larger"
                android:paddingBottom="@dimen/padding_larger"
                android:text="周六"
                android:textColor="@color/color_info"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#CBDAE6"
                android:gravity="center"
                android:paddingTop="@dimen/padding_larger"
                android:paddingBottom="@dimen/padding_larger"
                android:text="周日"
                android:textColor="@color/color_info"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_sign_icons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="1dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_sign_one"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/char_bg"
                android:paddingTop="@dimen/padding_larger"
                android:paddingBottom="@dimen/padding_larger"
                android:src="@mipmap/checkbox_normal" />

            <ImageView
                android:id="@+id/iv_sign_two"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@color/char_bg"
                android:paddingTop="@dimen/padding_larger"
                android:paddingBottom="@dimen/padding_larger"
                android:src="@mipmap/checkbox_normal" />

            <ImageView
                android:id="@+id/iv_sign_three"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/char_bg"
                android:paddingTop="@dimen/padding_larger"
                android:paddingBottom="@dimen/padding_larger"
                android:src="@mipmap/checkbox_normal" />

            <ImageView
                android:id="@+id/iv_sign_four"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@color/char_bg"
                android:paddingTop="@dimen/padding_larger"
                android:paddingBottom="@dimen/padding_larger"
                android:src="@mipmap/checkbox_normal" />

            <ImageView
                android:id="@+id/iv_sign_five"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/char_bg"
                android:paddingTop="@dimen/padding_larger"
                android:paddingBottom="@dimen/padding_larger"
                android:src="@mipmap/checkbox_normal" />

            <ImageView
                android:id="@+id/iv_sign_six"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@color/char_bg"
                android:paddingTop="@dimen/padding_larger"
                android:paddingBottom="@dimen/padding_larger"
                android:src="@android:color/transparent" />

            <ImageView
                android:id="@+id/iv_sign_seven"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/char_bg"
                android:paddingTop="@dimen/padding_larger"
                android:paddingBottom="@dimen/padding_larger"
                android:src="@mipmap/checkbox_normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本周签到情况"
                android:textColor="@color/color_info"
                android:textSize="@dimen/text_size_normal_up" />

            <TextView
                android:id="@+id/tv_week_sign_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:text="当前有0人参加"
                android:textColor="@color/color_info"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_go_sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:background="@drawable/normal_submit_btn_red"
            android:gravity="center"
            android:padding="@dimen/image_padding_big"
            android:text="立刻签到"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/share_and_award">

            <TextView
                android:id="@+id/do_share"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/do_award"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_padding"
            android:background="@color/list_divider_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="@dimen/image_padding_big"
            android:text="人气悬赏推荐"
            android:textColor="@color/color_tittle"
            android:textSize="@dimen/text_size_normal_up" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="@dimen/image_padding_big"
            android:text="这些悬赏还不错，推荐给你过过目"
            android:textColor="@color/color_tittle"
            android:textSize="@dimen/text_size_normal_down" />


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_padding"
            android:background="@color/list_divider_color" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>