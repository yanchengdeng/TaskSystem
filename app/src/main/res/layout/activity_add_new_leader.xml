<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.SettingFinalRateActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="用户UID:"
            android:textColor="@color/color_tittle"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/et_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:singleLine="true"
            android:maxLength="8"
            android:inputType="number"
            android:hint="8位数字"
            android:padding="@dimen/image_padding"
            android:background="@drawable/normal_submit_btn_gray_deep_trans"
            android:textColor="@color/color_tittle"
            android:textSize="@dimen/text_size_normal"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="用户名:"
            android:textColor="@color/color_tittle"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/et_nickname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="用户名"
            android:singleLine="true"
            android:padding="@dimen/image_padding"
            android:background="@drawable/normal_submit_btn_gray_deep_trans"
            android:textColor="@color/color_tittle"
            android:textSize="@dimen/text_size_normal"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="备注:"
            android:textColor="@color/color_tittle"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/et_mark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:minHeight="60dp"
            android:hint="备注（50字以内）"
            android:padding="@dimen/image_padding"
            android:background="@drawable/normal_submit_btn_gray_deep_trans"
            android:textColor="@color/color_tittle"
            android:gravity="top|left"
            android:textSize="@dimen/text_size_normal"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="手机号:"
            android:textColor="@color/color_tittle"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/et_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="手机号"
            android:inputType="number"
            android:maxLength="11"
            android:singleLine="true"
            android:padding="@dimen/image_padding"
            android:background="@drawable/normal_submit_btn_gray_deep_trans"
            android:textColor="@color/color_tittle"
            android:textSize="@dimen/text_size_normal"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="登录密码:"
            android:textColor="@color/color_tittle"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/et_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:singleLine="true"
            android:hint="登录密码"
            android:padding="@dimen/image_padding"
            android:background="@drawable/normal_submit_btn_gray_deep_trans"
            android:textColor="@color/color_tittle"
            android:textSize="@dimen/text_size_normal"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="地区:"
            android:textColor="@color/color_tittle"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/normal_submit_btn_gray_deep_trans"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_select_region"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/image_padding"
                android:textColor="@color/color_tittle"
                android:hint="选择地区"
                android:singleLine="true"
                android:textSize="@dimen/text_size_normal"
                />

        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/nav_bar_height"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/nav_bar_height"
        android:background="@drawable/normal_submit_btn_gray"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_normal" />

</LinearLayout>