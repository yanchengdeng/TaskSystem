<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/ll_static_info"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/image_padding_big"
    android:background="@drawable/normal_submit_btn_gray_trans"
    android:orientation="vertical"
    android:padding="2dp"
    android:visibility="visible"
   >


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginBottom="@dimen/image_padding_big"
        android:layout_marginTop="@dimen/image_padding_big"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_shop_host" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/image_padding"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:text="UID:"
                        android:textColor="@color/color_tittle"
                        android:textSize="@dimen/text_size_normal" />

                    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/tv_uid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="10000000"
                        android:textColor="@color/color_blue"
                        android:textSize="@dimen/text_size_normal" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/image_padding_big"
                    android:orientation="horizontal">

                    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="类型:"
                        android:textColor="@color/color_tittle"
                        android:textSize="@dimen/text_size_normal" />

                    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/tv_host_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="区域类型"
                        android:textColor="@color/color_tittle"
                        android:textSize="@dimen/text_size_normal" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/image_padding_big"
            android:layout_marginRight="@dimen/image_padding_big"
            android:background="@color/list_divider_color" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:text="用户名："
                android:textColor="@color/color_tittle"
                android:textSize="@dimen/text_size_normal_down" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/image_padding"
                android:background="@color/white"
                android:gravity="center"
                android:text="手机："
                android:textColor="@color/color_tittle"
                android:textSize="@dimen/text_size_normal_down" />

        </LinearLayout>


    </LinearLayout>

    <include layout="@layout/view_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_accout_intergray"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/image_padding"
            android:drawableLeft="@mipmap/icon_acount_intergray"
            android:text="账户积分：0"
            android:textColor="@color/color_tittle"
            android:textSize="@dimen/text_size_normal" />


        <TextView
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/image_padding_big"
            android:background="@color/list_divider_color" />

        <TextView
            android:id="@+id/tv_history_money"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/icon_credit_count"
            android:text="历史积分："
            android:textColor="@color/color_tittle"
            android:textSize="@dimen/text_size_normal" />

    </LinearLayout>

    <include layout="@layout/view_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_create_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/image_padding"
            android:drawableLeft="@mipmap/contribute_fanli"
            android:text="创造价值：0"
            android:textColor="@color/color_tittle"
            android:textSize="@dimen/text_size_normal" />


        <TextView
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/image_padding_big"
            android:background="@color/list_divider_color" />

        <TextView
            android:id="@+id/tv_finish_task"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/icon_acount_intergray"
            android:text="完成任务：0"
            android:textColor="@color/color_tittle"
            android:textSize="@dimen/text_size_normal" />

    </LinearLayout>


    <include layout="@layout/view_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:text="备注"
            android:textSize="@dimen/text_size_normal_up"
            android:textColor="@color/color_tittle"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="@dimen/activity_horizontal_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="1dp"
            android:layout_margin="@dimen/image_padding_big"
            android:background="@color/list_divider_color"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/tv_remark"
            android:padding="@dimen/image_padding"
            android:gravity="center_vertical"
            android:textColor="@color/color_tittle"
            android:textSize="@dimen/text_size_normal"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_height="match_parent" />
    </LinearLayout>




</LinearLayout>