<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activity.AddIdCardActivity">


    <ImageView
        android:id="@+id/iv_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@mipmap/wait_check"
        android:layout_width="36dp"
        android:layout_height="40dp"/>


    <TextView
        android:id="@+id/tv_message_num"
        android:layout_width="@dimen/activity_horizontal_margin"
        android:layout_height="@dimen/activity_horizontal_margin"
        android:background="@drawable/unread_num_circle"
        android:gravity="center"
        android:text="0"
        app:layout_constraintCircleRadius="25dp"
        app:layout_constraintCircleAngle="45"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintCircle="@+id/iv_icon"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_small"
        android:visibility="invisible" />


    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/image_padding_big"
        android:text="待审核"
        android:textColor="@color/color_tittle"
        android:textSize="@dimen/text_size_normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_icon"
        app:layout_constraintRight_toRightOf="parent"
       />



    <TextView
        android:id="@+id/tv_status_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/image_padding"
        android:text="待审核 说明"
        android:visibility="gone"
        android:textColor="@color/color_info"
        android:textSize="@dimen/text_size_normal_down"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_status"
        app:layout_constraintRight_toRightOf="parent"
       />





</android.support.constraint.ConstraintLayout>