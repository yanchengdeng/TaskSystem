<?xml version="1.0" encoding="utf-8"?>


<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_bg"
            android:orientation="vertical">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_margin"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="任务金额"
                            android:textColor="@color/color_tittle"
                            android:textSize="@dimen/text_size_normal_up"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/tv_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="@string/money_unit"
                            android:textColor="@color/red"
                            android:textSize="@dimen/text_size_normal_up"
                            android:textStyle="bold" />

                    </RelativeLayout>
                    <include layout="@layout/dash_line" />

                    <TextView
                        android:id="@+id/tv_end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/iv_end_time"
                        android:drawablePadding="@dimen/image_padding"
                        android:gravity="center_vertical"
                        android:text="@string/end_time"
                        android:textColor="@color/color_info"
                        android:textSize="@dimen/text_size_normal" />


                    <TextView
                        android:id="@+id/tv_wait_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/image_padding_big"
                        android:layout_marginBottom="@dimen/image_padding_big"
                        android:drawableLeft="@mipmap/iv_wait_time"
                        android:drawablePadding="@dimen/image_padding"
                        android:gravity="center_vertical"
                        android:text="@string/wait_time"
                        android:textColor="@color/color_info"
                        android:textSize="@dimen/text_size_normal" />

                    <TextView
                        android:id="@+id/tv_easy_or"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/iv_easy_or"
                        android:drawablePadding="@dimen/image_padding"
                        android:gravity="center_vertical"
                        android:text="@string/easy_or"
                        android:textColor="@color/color_info"
                        android:textSize="@dimen/text_size_normal" />


                    <TextView
                        android:id="@+id/tv_deposit_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/image_padding_big"
                        android:layout_marginBottom="@dimen/image_padding_big"
                        android:drawableLeft="@mipmap/iv_easy_or"
                        android:drawablePadding="@dimen/image_padding"
                        android:gravity="center_vertical"
                        android:textColor="@color/color_info"
                        android:textSize="@dimen/text_size_normal" />

                    <TextView
                        android:id="@+id/tv_left_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/image_padding_big"
                        android:drawableLeft="@mipmap/iv_left_num"
                        android:drawablePadding="@dimen/image_padding"
                        android:gravity="center_vertical"
                        android:text="@string/left_num"
                        android:textColor="@color/color_info"
                        android:textSize="@dimen/text_size_normal" />



                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="@dimen/image_padding"
                android:layout_height="20dp"
                android:background="@color/red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/image_padding_big"
                android:text="任务描述"
                android:textColor="@color/color_tittle"
                android:textSize="@dimen/text_size_normal_up"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tv_task_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/color_info"
                android:textSize="@dimen/text_size_normal" />

        </RelativeLayout>

        <View xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@drawable/shape_dash_line" />


        <com.task.system.common.RichTextView
            android:id="@+id/rich_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:lineSpacingMultiplier="1.3"
            android:padding="@dimen/activity_horizontal_margin"
            android:textColor="@color/color_info"
            android:textSize="@dimen/text_size_normal" />





    </LinearLayout>


</android.support.v4.widget.NestedScrollView>


