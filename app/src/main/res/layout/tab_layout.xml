<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:padding="@dimen/image_padding_big"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_tab_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="待工作"
        android:singleLine="true"
        android:textColor="@color/color_info"
        android:textSize="@dimen/text_size_normal" />

    <TextView
        android:id="@+id/tv_message_num"
        android:layout_width="@dimen/activity_horizontal_margin"
        android:layout_height="@dimen/activity_horizontal_margin"
        android:background="@drawable/unread_num_circle"
        android:gravity="center"
        android:layout_toRightOf="@+id/tv_tab_name"
        android:layout_marginLeft="@dimen/image_padding"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_small"
        android:visibility="gone" />

</RelativeLayout>