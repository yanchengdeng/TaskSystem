<?xml version="1.0" encoding="utf-8"?>


<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_count_time"
            android:text="@string/end_time_tips"
            android:layout_width="match_parent"
            android:background="@color/list_divider_color"
            android:padding="@dimen/activity_horizontal_margin"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_normal"
            android:layout_height="wrap_content" />


        <com.task.system.common.RichTextView
            android:id="@+id/rich_step_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:lineSpacingMultiplier="1.3"
            android:padding="@dimen/activity_horizontal_margin"
            android:textColor="@color/color_info"
            android:textSize="@dimen/text_size_normal" />


        <com.task.system.common.RichTextView
            android:id="@+id/rich_step_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:lineSpacingMultiplier="1.3"
            android:padding="@dimen/activity_horizontal_margin"
            android:textColor="@color/color_info"
            android:textSize="@dimen/text_size_normal" />


        <com.task.system.common.RichTextView
            android:id="@+id/rich_step_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:lineSpacingMultiplier="1.3"
            android:padding="@dimen/activity_horizontal_margin"
            android:textColor="@color/color_info"
            android:textSize="@dimen/text_size_normal" />


    </LinearLayout>


</androidx.core.widget.NestedScrollView>


