<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/smartRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F7FA"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll_user_info_ui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mine_top_bg"
        android:gravity="center_vertical"
        android:minHeight="@dimen/ad_heigh"
        android:orientation="horizontal"
        android:padding="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/iv_header"
            android:layout_width="@dimen/icon_head_size"
            android:layout_height="@dimen/icon_head_size"
            android:src="@mipmap/defalut_header" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_17" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/image_padding"
                android:layout_marginBottom="@dimen/image_padding"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14" />


        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/arrow_right_white" />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rl_my_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="我的收益"
            android:textColor="@color/color_info"
            android:textSize="@dimen/sp_14" />


        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableRight="@mipmap/arrow_right_black"
            android:drawablePadding="@dimen/image_padding"
            android:gravity="center_vertical"
            android:textColor="@color/red"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold" />

    </RelativeLayout>



    <TextView
        android:id="@+id/tv_allwork_title"
        android:background="@color/white"
        android:paddingTop="@dimen/image_padding_big"
        android:paddingBottom="@dimen/image_padding_big"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_height="wrap_content"
        android:drawableRight="@mipmap/arrow_right_black"
        android:text="全部差事"
        android:textColor="@color/color_info"
        android:textSize="@dimen/sp_14"
        />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_horizontal_margin"/>

    <TextView
        android:id="@+id/tv_collect"
        android:background="@color/white"
        android:padding="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@mipmap/arrow_right_black"
        android:text="我的收藏"
        android:textColor="@color/color_info"
        android:textSize="@dimen/sp_14"
        />
    <TextView
        android:id="@+id/tv_my_accoutn"
        android:background="@color/white"
        android:padding="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@mipmap/arrow_right_black"
        android:text="我的账目"
        android:layout_marginTop="1dp"
        android:textColor="@color/color_info"
        android:textSize="@dimen/sp_14"
        />
    <TextView
        android:id="@+id/tv_invite_code"
        android:background="@color/white"
        android:padding="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@mipmap/arrow_right_black"
        android:text="我的邀请码"
        android:layout_marginTop="1dp"
        android:textColor="@color/color_info"
        android:textSize="@dimen/sp_14"
        />


</LinearLayout>


</com.scwang.smartrefresh.layout.SmartRefreshLayout>