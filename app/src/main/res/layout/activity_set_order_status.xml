<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.TaskDetailActivity">





    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_sore_tips"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:text="调整价格"
                android:textColor="@color/color_tittle"
                android:textSize="@dimen/text_size_normal_up" />


            <EditText
                android:id="@+id/edit_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:background="@drawable/normal_submit_btn_gray_trans"
                android:gravity="left|top"
                android:hint="调整金额"
                android:visibility="gone"
                android:inputType="numberDecimal"
                android:minHeight="50dp"
                android:padding="@dimen/activity_horizontal_margin"
                android:textColor="@color/color_info"
                android:textSize="@dimen/text_size_normal_up" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:text="原因"
                android:textColor="@color/color_tittle"
                android:textSize="@dimen/text_size_normal_up" />


            <EditText
                android:id="@+id/edit_dispute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:background="@drawable/normal_submit_btn_gray_trans"
                android:gravity="left|top"
                android:hint="原因"
                android:lineSpacingMultiplier="1.3"
                android:minHeight="100dp"
                android:padding="@dimen/activity_horizontal_margin"
                android:textColor="@color/color_info"
                android:textSize="@dimen/text_size_normal" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:text="提交图片(不超过五张)"
                android:textColor="@color/color_tittle"
                android:textSize="@dimen/text_size_normal_up" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:choiceMode="singleChoice"
                android:divider="@null"
                android:fadingEdge="none"
                android:listSelector="@android:color/transparent"
                android:scrollbarStyle="outsideOverlay"
                app:layoutManager="android.support.v7.widget.GridLayoutManager"
                app:spanCount="3"
                tools:listitem="@layout/adapter_select_image" />


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <TextView
        android:id="@+id/tv_next_step"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_bar_height"
        android:background="@color/red"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_normal_up" />
</LinearLayout>