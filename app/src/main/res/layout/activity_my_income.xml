<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/list_divider_color"
    tools:context=".activity.MyIncomeActivity">


    <TextView
        android:text="可提现金额（元）"
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:background="@color/red"
        android:paddingTop="30dp"
        android:paddingLeft="30dp"
        android:textSize="@dimen/text_size_normal"
        android:layout_height="wrap_content" />



    <TextView
        android:id="@+id/tv_avable_monet"
        android:background="@color/red"
        android:text="0.00"
        android:padding="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_larger_big"
        android:textStyle="bold"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:text="收益提现中..."
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/color_tittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_money_withdraw"
                android:text="0"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/red"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <TextView
            android:layout_width="1dp"
            android:layout_height="@dimen/nav_bar_height"
            android:background="@color/color_date"/>

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:text="历史收益"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/color_tittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_history_money"
                android:text="0"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/color_tittle"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>



    </LinearLayout>

    <TextView
        android:id="@+id/tv_apply_withdraw"
        android:text="申请提现"
        android:padding="@dimen/activity_horizontal_margin"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:drawableRight="@mipmap/arrow_right_black"
        android:drawableLeft="@mipmap/money"
        android:drawablePadding="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <TextView
        android:id="@+id/tv_income_records"
        android:text="收益记录"
        android:padding="@dimen/activity_horizontal_margin"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:drawableRight="@mipmap/arrow_right_black"
        android:drawableLeft="@mipmap/diamond"
        android:drawablePadding="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>