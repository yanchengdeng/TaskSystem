<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddIdCardActivity">


    <TextView
        android:id="@+id/tv_name_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:text="          姓名："
        android:textColor="@color/color_tittle"
        android:textSize="@dimen/text_size_normal"
        app:layout_constraintBaseline_toBaselineOf="@+id/et_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/et_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:hint="输入真实姓名"
        android:maxLength="10"
        android:padding="5dp"
        android:singleLine="true"
        android:textColor="@color/color_info"
        android:textSize="@dimen/text_size_normal"
        app:layout_constraintLeft_toRightOf="@+id/tv_name_tips"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_id_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:text="身份证号："
        android:textColor="@color/color_tittle"
        android:textSize="@dimen/text_size_normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_tips" />


    <EditText
        android:id="@+id/et_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:hint="输入本人身份证"
        android:maxLength="18"
        android:padding="5dp"
        android:singleLine="true"
        android:textColor="@color/color_info"
        android:textSize="@dimen/text_size_normal"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_id_tips"
        app:layout_constraintLeft_toRightOf="@+id/tv_id_tips"
        app:layout_constraintRight_toRightOf="parent" />


    <LinearLayout
        android:id="@+id/rl_car_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_id">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="身份证上传："
            android:textColor="@color/color_tittle"
            android:textSize="@dimen/text_size_normal"
            app:layout_constraintLeft_toLeftOf="parent" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:orientation="horizontal">


            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginRight="@dimen/image_padding_big"
                android:layout_weight="1">


                <ImageView
                    android:id="@+id/iv_ad_up_real"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:background="@drawable/normal_submit_add_card"
                    android:scaleType="fitXY" />


                <TextView
                    android:id="@+id/iv_id_up"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="人面像"
                    android:textColor="@color/color_date"
                    android:textSize="@dimen/text_size_normal" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginLeft="@dimen/image_padding_big"
                android:layout_weight="1">


                <ImageView
                    android:id="@+id/iv_ad_down_real"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:background="@drawable/normal_submit_add_card"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/iv_id_down"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"

                    android:gravity="center"
                    android:text="国徽像"
                    android:textColor="@color/color_date"
                    android:textSize="@dimen/text_size_normal" />
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/rl_card_hold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rl_car_up">


        <TextView
            android:id="@+id/tv_id_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="手持身份证："
            android:textColor="@color/color_tittle"
            android:textSize="@dimen/text_size_normal"
            app:layout_constraintLeft_toLeftOf="parent" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:orientation="horizontal">


            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginRight="@dimen/image_padding_big"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_id_hold_real"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:background="@drawable/normal_submit_add_card"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/iv_id_hold"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:text="手持身份证"
                    android:textColor="@color/color_date"
                    android:textSize="@dimen/text_size_normal" />
            </FrameLayout>


            <TextView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginLeft="@dimen/image_padding_big"
                android:layout_weight="1"
                android:background="@drawable/normal_submit_add_card"
                android:gravity="center"
                android:text="国徽像"
                android:textColor="@color/color_info"
                android:textSize="@dimen/text_size_normal"
                android:visibility="invisible" />

        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/nav_bar_height"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@drawable/normal_submit_btn_red"
        android:gravity="center"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_normal_up"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/rl_card_hold" />

</android.support.constraint.ConstraintLayout>